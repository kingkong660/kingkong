<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lis.mapper.LoginMapper">

	<!-- 验证用户名或手机号及密码是否正确 -->
	<select id="queryUser" parameterType="user" resultType="user">
		select user_id from t_user where
		 (user_name=#{userName} and user_password=#{userPassword})
		 or
		 (user_telephone=#{userTelephone} and user_password=#{userPassword})
	</select>
	<!-- 验证手机号是否存在 -->
	<select id="queryUserTelephone" parameterType="String" resultType="user">
		select * from t_user where user_telephone=#{telephone}
	</select>
	
		
</mapper>  












